@model List<EventManager_Web.Models.Evento>

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eventos</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        /* Estilos gerais */
        body {
            background-color: #F4F4F4;
        }

        .container {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Carrossel */
        .carousel-item img {
            max-height: 249px; /* Mantém o tamanho padrão */
            width: 100%; /* Ajusta a largura */
            object-fit: cover; /* Garante ajuste sem distorção */
        }

        .carousel-caption {
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 10px;
            border-radius: 8px;
        }

        /* Títulos e botões */
        h2 {
            color: #032A52;
        }

        button {
            background-color: #032A52;
            border: none;
            color: white;
        }
    </style>
</head>
<body>

    <div class="container mt-3">
        <h2>Eventos e Avaliações</h2>
        <div id="carouselEventos" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @{
                    var isActive = true;
                    foreach (var evento in Model)
                    {
                        <div class="carousel-item @(isActive ? "active" : "")">
                            <img src="@evento.imagemURL" class="img-fluid d-block w-100" alt="@evento.Nome">
                            <div class="carousel-caption">
                                <h5>@evento.Nome</h5>
                                <p>@evento.Descricao</p>
                            </div>
                        </div>
                        isActive = false;
                    }
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselEventos" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselEventos" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>

        <!-- Perguntas Frequentes -->
        <section class="container mt-3">
            <h2>Perguntas Frequentes</h2>
            <div class="accordion" id="faqAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                            Como comprar ingressos?
                        </button>
                    </h2>
                    <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Basta acessar a página do evento e seguir as instruções para pagamento.
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                            Posso cancelar meu ingresso?
                        </button>
                    </h2>
                    <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Sim, consulte a política de cancelamento do evento para mais detalhes.
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

</body>
</html>
