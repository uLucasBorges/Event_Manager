@model EventManager_Web.Models.Evento

<h1 class="text-center mt-4">Criar Novo Evento</h1>

<div class="container mt-4">
    <form id="eventForm" method="post" asp-controller="Home" asp-action="CriarEvento">
        <!-- Nome do evento -->
        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome do Evento</label>
            <input type="text" class="form-control" asp-for="Nome" placeholder="Digite o nome do evento" required>
        </div>

        <!-- Data do evento -->
        <div class="mb-3">
            <label asp-for="Data" class="form-label">Data do Evento</label>
            <input type="date" class="form-control" asp-for="Data" required>
        </div>

        <!-- Local do evento -->
        <div class="mb-3">
            <label asp-for="LocalId" class="form-label">Local do Evento</label>
            <select class="form-select" asp-for="LocalId" required>
                <option selected disabled>Selecione um local</option>
                @foreach (var local in ViewBag.Locais)
                {
                    <option value="@local.Id">@local.Nome</option>
                }
            </select>
        </div>

        <!-- Capacidade máxima -->
        <div class="mb-3">
            <label asp-for="CapacidadeMaxima" class="form-label">Capacidade Máxima</label>
            <input type="number" class="form-control" asp-for="CapacidadeMaxima" placeholder="Número máximo de participantes" required>
        </div>

        <!-- URL da Imagem -->
        <div class="mb-3">
            <label asp-for="imagemURL" class="form-label">Imagem URL</label>
            <input type="text" class="form-control" asp-for="imagemURL" placeholder="Insira o URL da imagem do evento" required>
        </div>

        <!-- Descrição -->
        <div class="mb-3">
            <label asp-for="Descricao" class="form-label">Descrição</label>
            <textarea class="form-control" asp-for="Descricao" rows="3" placeholder="Descreva o evento" required></textarea>
        </div>

        <!-- Feedback -->
        <div class="mb-3">
            <label asp-for="Feedback" class="form-label">Feedback</label>
            <textarea class="form-control" asp-for="Feedback" rows="3" placeholder="Descreva o Feedback" required></textarea>
        </div>

        <!-- Botão para criar o evento -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Criar Evento</button>
        </div>
    </form>
</div>

<!-- Alerta Sobreposto -->
<div id="alertNotification" class="position-fixed top-50 start-50 translate-middle alert alert-success text-center shadow-lg"
     style="display: none; z-index: 1050; padding: 20px; min-width: 300px; border-radius: 8px;">
    ✅ Evento criado com sucesso!
</div>

<!-- Inclusão do JavaScript -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#eventForm").submit(function () {
            // Exibe o alerta sobreposto antes de enviar o formulário
            $("#alertNotification").fadeIn().delay(2000).fadeOut();
        });
    });
</script>
