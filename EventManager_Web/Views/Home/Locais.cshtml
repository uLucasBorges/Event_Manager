
<h1 class="text-center mt-4">Lista de Locais</h1>

@if (ViewBag.Role != null)
{
    <!-- Botões para criar novo local -->
    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Home" asp-action="CriarLocal" class="btn btn-primary me-2" data-bs-toggle="tooltip" title="Criar Novo Local">
            <i class="bi bi-geo-alt"></i> Criar Local
        </a>
    </div>
}

<div class="container mt-4">
    <div class="row">
        @foreach (var local in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 p-3">
                    <h5 class="card-title">@local.Nome</h5>
                    <p class="text-muted">Endereço: @local.Endereco</p>

                    <div class="mt-auto d-flex justify-content-center gap-2">
                        @if (ViewBag.Role != null)
                        {
                            <form method="post" asp-controller="Home" asp-action="AtualizarLocal">
                                <input type="hidden" name="localId" value="@local.Id" />
                                <button type="submit" class="btn btn-secondary btn-sm" data-bs-toggle="tooltip" title="Editar Local">
                                    <i class="bi bi-pencil"></i> Editar
                                </button>
                            </form>

                            <form method="post" asp-controller="Home" asp-action="DeletarLocal">
                                <input type="hidden" name="localId" value="@local.Id" />
                                <button type="submit" class="btn btn-danger btn-sm" data-bs-toggle="tooltip" title="Apagar Local">
                                    <i class="bi bi-trash"></i> Apagar
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
