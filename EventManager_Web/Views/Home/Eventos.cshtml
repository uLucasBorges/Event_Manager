@model List<Evento>

<h1 class="text-center mt-4">Lista de Eventos</h1>

@if (ViewBag.Role != null)
{
    <!-- Botão para criar novo evento -->
    <div class="text-end mb-3">
        <a asp-controller="Home" asp-action="CriarEvento" class="btn btn-primary">Criar Novo Evento</a>
    </div>
}

<div class="container mt-4">
    <div class="row">
        @foreach (var evento in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <img src="@evento.imagemURL" class="card-img-top img-fluid" alt="@evento.Nome" style="max-height: 200px; object-fit: cover;">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@evento.Nome</h5>
                        <p class="card-text">@evento.Descricao</p>
                        <p class="text-muted">Data: @evento.Data.ToString("dd/MM/yyyy")</p>

                        <div class="mt-auto d-flex justify-content-between gap-2">
                            <a asp-controller="Home" asp-action="Checkout" class="btn btn-primary btn-sm flex-grow-1">Comprar Ingresso</a>

                            @if (ViewBag.Role != null)
                            {
                                <form method="post" asp-controller="Home" asp-action="AtualizarEvento">
                                    <input type="hidden" name="eventoId" value="@evento.Id" />
                                    <button type="submit" class="btn btn-secondary btn-sm flex-grow-1">Editar</button>
                                </form>

                                <form method="post" asp-controller="Home" asp-action="DeletarEvento">
                                    <input type="hidden" name="eventoId" value="@evento.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm flex-grow-1">Apagar</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
