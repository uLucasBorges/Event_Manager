@{
    Layout = null; /* Remove layouts externos caso necessário */
    ViewData["Title"] = ViewData["Title"] ?? "Meu Site"; /* Título dinâmico */
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - EventManager</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #F4F4F4;
        }

        .navbar {
            background-color: #032A52;
        }

        .navbar-nav .nav-link {
            color: white !important;
        }

        .content-container {
            padding: 40px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 900px;
            width: 100%;
            margin: auto;
            margin-top: 30px;
        }

        footer {
            background-color: #032A52;
            color: white;
            padding: 20px 0;
        }
    </style>
</head>
<body>

    <!-- Menu -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="@Url.Action("Index", "Home")">EventManager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (ViewBag.Role != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Logout", "Home")">Sair</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Login", "Home")">Login</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Eventos", "Home")">Eventos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Corpo da Página -->
    <div class="container content-container">
        @RenderBody() <!-- Aqui cada View será carregada -->
    </div>

    <!-- Rodapé -->
    <footer class="text-white text-center py-4 mt-5">
        <div class="container">
            <p>© 2025 EventManager. Todos os direitos reservados.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
